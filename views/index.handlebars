<div class="row">
    <div class="col p-5">
        <h3>All the Burgers!</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{> burgers/burger-item tried=false displayDevourButton=true}}
            {{/each}}
        </ul>
    </div>
    
    <div class="col p-5">
        <h3>Undiscovered Burgers!</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-item tried=false displayDevourButton=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col p-5">
        <h3>Burgers Devoured!</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-item tried=true displayDevourButton=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="card col-4 mx-auto p-5 bg-light">
        <form class="create-burger">
            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-lg">Burger:</span>
                </div>
                <input id="name" name="name" type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
<script src="/js/burger.js"></script>